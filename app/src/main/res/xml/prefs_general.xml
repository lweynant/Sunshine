<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference android:key="@string/prefs_location_key"
        android:title="@string/prefs_location"
        android:defaultValue="@string/prefs_default_location_value"
        android:inputType="text"
        android:singleLine="true"
        />
    <ListPreference
        android:key="@string/prefs_units_key"
        android:defaultValue="@string/prefs_default_units_value"
        android:title="@string/prefs_units"
        android:dialogTitle="@string/prefs_units"
        android:entries="@array/prefs_units_human_readable"
        android:entryValues="@array/prefs_units"
        />

</PreferenceScreen>